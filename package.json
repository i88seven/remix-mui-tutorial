{
  "name": "remix-tutorial",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev --port 3000",
    "build": "remix vite:build",
    "preview": "vite preview",
    "tsc": "tsc --noEmit --skipLibCheck",
    "knip": "knip --exclude dependencies,unlisted,duplicates",
    "knip-all": "knip",
    "lint": "biome lint src",
    "lint:fix": "biome check --write src",
    "lint:fix-unsafe": "biome check --write --unsafe src",
    "format": "biome format src --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^5.16.7",
    "@mui/lab": "^5.0.0-alpha.173",
    "@mui/material": "^5.16.7",
    "@mui/x-date-pickers": "^7.12.1",
    "@remix-run/node": "^2.11.1",
    "@remix-run/react": "^2.11.1",
    "@tanstack/react-query": "^5.51.23",
    "dayjs": "^1.11.12",
    "i18next": "^23.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.52.2",
    "react-i18next": "^15.0.1",
    "tiny-invariant": "^1.3.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@remix-run/dev": "^2.11.1",
    "@types/node": "^22.2.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "husky": "^9.1.4",
    "knip": "^5.27.2",
    "lint-staged": "^15.2.8",
    "sass": "^1.77.8",
    "typescript": "^5.5.4",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json}": [
      "biome check src --write --no-errors-on-unmatched",
      "biome check src --write --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check src --write --unsafe --no-errors-on-unmatched",
      "biome format src --write --no-errors-on-unmatched",
      "biome lint src --write --no-errors-on-unmatched"
    ]
  }
}
